<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/borderColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="submitButton">
        <item name="android:background">@color/submitButton</item>
        <item name="android:textColor">@color/textSubmitButton</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="submitButtondis">
        <item name="android:background">#22FF09</item>
        <item name="android:textColor">@color/textSubmitButton</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_items_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="info_texts">
        <item name="android:textSize">18sp</item>


    </style>

